<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css"/>

<p id="notice"><%= notice %></p>

<h1>Movies</h1>
<%= form_tag import_movies_path, multipart: true, class: 'form-inline' do %>
      <div class="form-group col-md-3">
        <%= file_field_tag :file, class: 'btn' %>
      </div>
      <div class="form-group col-md-2" style="float: left;">
        <%= submit_tag "Import CSV", class: 'btn btn-info' %>
      </div>
<% end %>
<table id="example" class="display" style="width:100%">
  <thead>
    <tr>
      <th>Movie</th>
      <th>Description</th>
      <th>Year</th>
      <th>Director</th>
      <th>Actor</th>
      <th>Filming location</th>
      <th>Country</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.movie_name %></td>
        <td><%= movie.description %></td>
        <td><%= movie.year %></td>
        <td><%= movie.director %></td>
        <td><%= movie.actor %></td>
        <td><%= movie.filming_location %></td>
        <td><%= movie.country %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path %>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<script type="text/javascript">
  $(document).ready(function() {
    $('#example').DataTable();
  } );
</script>